{
  "name": "nodejs-api-template",
  "version": "0.0.1",
  "description": "A boilerplate for building a NodeJS API server. Use it as a template project when you want to start a new project.",
  "main": "bin/server.js",
  "scripts": {
    "start": "./node_modules/.bin/forever start ./bin/server.js",
    "stop": "./node_modules/.bin/forever stop ./bin/server.js",
    "status": "./node_modules/.bin/forever list",
    "test": "node_modules/cucumber/bin/cucumber.js features/",
    "lint": "node_modules/jshint/bin/jshint ./bin ./src",
    "code-style": "node_modules/jscs/bin/jscs ./bin ./src"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/IGZangelsanchez/nodejs-api-template.git"
  },
  "keywords": [
    "nodejs",
    "api",
    "template"
  ],
  "author": "Angel Sanchez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IGZangelsanchez/nodejs-api-template/issues"
  },
  "homepage": "https://github.com/IGZangelsanchez/nodejs-api-template",
  "dependencies": {
    "restify": "^2.8.4",
    "mongoose": "^3.8.21",
    "config": "^1.9.0",
    "bunyan": "^1.2.3",
    "forever": "^0.13.0"
  },
  "devDependencies": {
    "cucumber": "^0.4.7",
    "supertest": "^0.15.0",
    "jshint": "^2.5.11",
    "jscs": "^1.9.0"
  }
}
